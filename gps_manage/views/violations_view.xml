<odoo>
    <data>
        <record id="violations_view_tree" model="ir.ui.view">
            <field name="name">violations tree</field>
            <field name="model">violations</field>
            <field name="arch" type="xml">
                <tree multi_edit="1" create="1" edit="1" delete="1">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="violations_view_form" model="ir.ui.view">
            <field name="name">violations form</field>
            <field name="model">violations</field>
            <field name="arch" type="xml">
                <form create="1" edit="1" delete="1">
                    <sheet>
                        <group string="General Information.">
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="violations_action" model="ir.actions.act_window">
            <field name="name">Violations</field>
            <field name="res_model">violations</field>
            <field name="view_mode">tree,form</field>  <!-- Corrected view_mode -->
        </record>

        <menuitem
                id="violations_menu_item"
                name="Violations"
                parent="configurations_menu"
                action="violations_action"/>
    </data>
</odoo>
