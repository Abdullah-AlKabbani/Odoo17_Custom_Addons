<odoo>
  <record id="view_iso_config_form" model="ir.ui.view">
    <field name="name">iso.config.form</field>
    <field name="model">iso.config</field>
    <field name="arch" type="xml">
      <form string="ISO Tickets Settings">
        <sheet>
          <div class="oe_title">
            <h1>ISO Tickets Settings</h1>
            <p class="text-muted">These settings affect the public form at <code>/iso/form</code>.</p>
          </div>
          <group>
            <field name="iso_default_shift_id" options="{'no_create_edit': True}"/>
          </group>
        </sheet>
        <footer>
          <button string="Save" type="object" name="execute" class="btn-primary"/>
          <button string="Discard" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_iso_settings" model="ir.actions.act_window">
    <field name="name">Settings</field>
    <field name="res_model">iso.config</field>
    <field name="view_mode">form</field>
    <field name="target">inline</field>
    <field name="context">{}</field>
  </record>
</odoo>
