<odoo>
  <record id="res_config_settings_view_form_iso" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.iso</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
    <field name="arch" type="xml">

      <!-- Insert inside the notebook settings tab -->
      <xpath expr="//div[@id='settings_tab']/div[@class='tab-content']" position="inside">
        <div class="tab-pane active" role="tabpanel" id="iso_settings_tab" groups="iso_tickets.group_iso_manager">
          <div class="app_settings_block" string="ISO Tickets">
            <h2>ISO Tickets</h2>

            <div class="row mt16 o_settings_container">

              <!-- Enable public form -->
              <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_left_pane">
                  <field name="iso_enable_public"/>
                </div>
                <div class="o_setting_right_pane">
                  <label for="iso_enable_public"/>
                  <div class="text-muted">
                    Exposes the public submission form at <code>/iso/form</code>.
                  </div>
                </div>
              </div>

              <!-- Default shift -->
              <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_left_pane">
                  <field name="iso_default_shift_id" options="{'no_create_edit': True}"/>
                </div>
                <div class="o_setting_right_pane">
                  <label for="iso_default_shift_id"/>
                  <div class="text-muted">
                    Pre-select this shift on the public form (optional).
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </xpath>

    </field>
  </record>
</odoo>
