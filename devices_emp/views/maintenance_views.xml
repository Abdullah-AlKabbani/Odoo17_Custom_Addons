<odoo>
    <record id="view_maintenance_equipment_form_inherit" model="ir.ui.view">
        <field name="name">maintenance.equipment.form.inherit</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/> <!-- Inherit the existing equipment form view -->
        <field name="arch" type="xml">
            <!-- Assuming there is a group for "Product Information" -->
            <xpath expr="//group" position="inside">

                <field name="contract_image" string="Contract File"/>
            </xpath>
        </field>
    </record>
</odoo>
