<odoo>
  <record id="view_helpdesk_visit_report_tree" model="ir.ui.view">
    <field name="name">helpdesk.visit.report.tree</field>
    <field name="model">helpdesk.visit.report</field>
    <field name="arch" type="xml">
      <tree>
        <field name="ticket_number"/>
        <field name="name"/>
        <field name="branch_id"/>
        <field name="visit_type_id"/>
        <field name="visit_datetime"/>
        <field name="is_urgent"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <record id="view_helpdesk_visit_report_form" model="ir.ui.view">
    <field name="name">helpdesk.visit.report.form</field>
    <field name="model">helpdesk.visit.report</field>
    <field name="arch" type="xml">
      <form string="Help Desk Visits Report">
        <header>
          <button name="action_set_draft" type="object" string="Set Draft"
                  invisible="state != 'authorized'" class="btn-secondary"/>
          <button name="action_authorize" type="object" string="Authorize"
                  invisible="state != 'draft'" class="btn-primary"/>
          <field name="state" widget="statusbar" statusbar_visible="draft,authorized"/>
        </header>

        <sheet>
          <h1><field name="name"/></h1>

          <group>
            <group string="Branch Information">
              <field name="branch_id"/>
              <field name="branch_responsible"/>
            </group>

            <group string="Visit Status">
              <field name="visit_type_id"/>
              <field name="visit_datetime"/>
              <field name="is_urgent"/>
              <field name="ticket_number" readonly="1"/>
              <field name="request_method_id"/>
            </group>
          </group>

          <group string="Detailed Work and Notes">
            <field name="details"/>
          </group>

          <group string="Services">
            <group string="POS Device">
              <field name="pos_overall_status"/>
              <field name="pos_hdd_usage"/>
              <field name="pos_cpu_usage"/>
              <field name="pos_os_status"/>
              <field name="pos_ram"/>
            </group>

            <group string="Other Devices">
              <field name="device_line_ids" context="{'default_report_id': active_id}">
                <tree editable="bottom">
                  <field name="sequence" widget="handle"/>
                  <field name="device_id"/>
                  <field name="overall_status"/>
                  <field name="notes"/>
                </tree>
                <form>
                  <group>
                    <field name="sequence"/>
                    <field name="device_id"/>
                    <field name="overall_status"/>
                    <field name="notes"/>
                  </group>
                </form>
              </field>
            </group>
          </group>

          <group string="Backup System">
            <field name="backup_status"/>
            <field name="backup_date"/>
            <field name="backup_notes"/>
          </group>
        </sheet>

        <chatter/>
      </form>
    </field>
  </record>
</odoo>
