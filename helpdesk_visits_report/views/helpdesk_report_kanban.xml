<odoo>
  <record id="view_helpdesk_visit_report_kanban" model="ir.ui.view">
    <field name="name">helpdesk.visit.report.kanban</field>
    <field name="model">helpdesk.visit.report</field>
    <field name="arch" type="xml">
      <kanban default_group_by="state" class="o_kanban_small_column">
        <field name="ticket_number"/>
        <field name="name"/>
        <field name="branch_id"/>
        <field name="visit_type_id"/>
        <field name="visit_datetime"/>
        <field name="state"/>
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_global_click o_kanban_record">
              <div class="o_kanban_primary_left">
                <strong><t t-esc="record.ticket_number.value"/></strong> â€”
                <t t-esc="record.name.value"/>
              </div>
              <div class="o_kanban_primary_right">
                <span class="badge">
                  <t t-esc="record.state.value"/>
                </span>
              </div>
              <div>Branch: <t t-esc="record.branch_id.value"/></div>
              <div>Type: <t t-esc="record.visit_type_id.value"/></div>
              <div>Date: <t t-esc="record.visit_datetime.value"/></div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>
</odoo>
