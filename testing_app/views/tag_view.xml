<odoo>
    <data>
        <record id="tag_view_tree" model="ir.ui.view">
            <field name="name">Tag tree</field>
            <field name="model">tag</field>
            <field name="arch" type="xml">
                <tree multi_edit="1" create="1" edit="1" delete="1">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="tag_view_form" model="ir.ui.view">
            <field name="name">Tag form</field>
            <field name="model">tag</field>
            <field name="arch" type="xml">
                <form create="1" edit="1" delete="1">
                    <sheet>
                        <group string="General Information.">
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tag_action" model="ir.actions.act_window">
            <field name="name">Tag</field>
            <field name="res_model">tag</field>
            <field name="view_mode">tree,form</field>  <!-- Corrected view_mode -->
        </record>

        <menuitem
                id="tag_menu_item"
                name="Tags"
                parent="configurations_menu"
                action="tag_action"/>
    </data>
</odoo>
