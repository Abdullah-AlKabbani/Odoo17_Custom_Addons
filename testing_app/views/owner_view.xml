<odoo>
    <data>
        <record id="owner_view_tree" model="ir.ui.view">
            <field name="name">Owner tree</field>
            <field name="model">owner</field>
            <field name="arch" type="xml">
                <tree multi_edit="1" create="1" edit="1" delete="1">
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="address"/>
                </tree>
            </field>
        </record>

        <record id="owner_action" model="ir.actions.act_window">
            <field name="name">Owners</field>
            <field name="res_model">owner</field>
            <field name="view_mode">tree,form</field>  <!-- Add view_mode -->
        </record>

        <record id="owner_view_form" model="ir.ui.view">
            <field name="name">Owner form</field>  <!-- Updated name -->
            <field name="model">owner</field>  <!-- Updated model -->
            <field name="arch" type="xml">
                <form create="1" edit="1" delete="1">
                    <sheet>

                        <group string="General Information.">
                            <group>
                                <field name="name"/>
                                <field name="phone"/>
                            </group>
                            <group string="Additional Information.">
                                <field name="address"/>  <!-- You might want to add more fields here -->
                            </group>
                            <group>
                                <field name="property_ids" widget="many2many_tags"/>

                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem
                id="owner_menu_item"
                name="Owners"
                parent="configurations_menu"
                action="owner_action"/>
    </data>
</odoo>
